<!DOCTYPE html>
<html>

<head>
    <title>Index Home - EJS</title>

    <script src="jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>

    <script>
        var socket = io();
        $(document).ready(function () {
            $("#Login").show(2000);
            $("#Chat").hide(1000);

            $("#SetName").click(function () {
                socket.emit("SetN", $("#TextName").val());
            });

            socket.on("NameX", function (data) {
                alert("Try Again");
            });

            socket.on("NameV", function (data) {
                $("#Login").hide(1000);
                $("#Chat").show(2000);
            });

            $("#SendMsg").click(function () {
                socket.emit("SendMSG", $("#TextChat").val());
            });

            socket.on("DataMSG", function (data) {
                $("#Data").append("<b style='color: aqua'>" + data.id + "</b> : " + data.c);
            });

            $("#LogMsg").click(function () {
                socket.emit("Logout");
            });
        });
    </script>
</head>

<body>
    <div id="Login">
        <input type="text" id="TextName">
        <input type="button" id="SetName" value="Name">
    </div>
    <div id="Chat">
        <div>
            <h3 id="Data"></h3>
        </div>

        <input type="text" id="TextChat">
        <input type="button" id="SendMsg" value="Send">
        <br><input type="button" id="LogMsg" value="Logout">
    </div>
</body>

</html>